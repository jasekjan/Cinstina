<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="8">

    <Button
        android:id="@+id/btn_categories_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="10px"
        android:layout_weight="1"
        android:onClick="showCategoriesList"
        android:text="@string/categories_list" />

    <Button
        android:id="@+id/btn_categories_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="10px"
        android:layout_weight="1"
        android:onClick="assignWordToCategory"
        android:text="@string/categories_words" />
</LinearLayout>